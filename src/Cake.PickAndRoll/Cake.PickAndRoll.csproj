<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFrameworks>netstandard2.0;net46</TargetFrameworks>
  </PropertyGroup>

  <PropertyGroup>
    <PackageId>Cake.PickAndRoll</PackageId>
    <PackageVersion>0.1.7-alpha</PackageVersion>
    <Authors>jincod</Authors>
    <Description>Keep environment specific attributes in separate configuration files and build desired config on demand.</Description>
    <PackageLicenseUrl>http://www.opensource.org/licenses/mit-license.php</PackageLicenseUrl>
    <PackageProjectUrl>https://github.com/jincod/PickAndRoll.git</PackageProjectUrl>
    <PackageIconUrl>https://github.com/cake-contrib/graphics/raw/master/png/cake-contrib-medium.png</PackageIconUrl>
    <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
    <PackageTags>Configs-Generator</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Cake.Core" Version="0.26.1" PrivateAssets="All" />
    <PackageReference Include="Newtonsoft.Json" Version="11.0.2" />
    <PackageReference Include="Microsoft.CodeAnalysis.CSharp.Scripting" Version="2.7.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\PickAndRoll\PickAndRoll.csproj" PrivateAssets="All" />
  </ItemGroup>

  <!-- Hack -->
  <ItemGroup>
    <_PackageFiles Include="$(OutputPath)\net46\PickAndRoll.dll">
      <BuildAction>None</BuildAction>
      <PackagePath>lib\net46\</PackagePath>
    </_PackageFiles>
    <_PackageFiles Include="$(OutputPath)\netstandard2.0\PickAndRoll.dll">
      <BuildAction>None</BuildAction>
      <PackagePath>lib\netstandard2.0\</PackagePath>
    </_PackageFiles>
  </ItemGroup>

</Project>